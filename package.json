{
  "name": "go-reader",
  "version": "1.0.0",
  "description": "A cross-platform desktop novel reader application",
  "author": "Your Name <your.email@example.com>",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:frontend dev:backend electron:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "per-env",
    "dev:backend:win32": "cd backend && go run cmd/server/main.go",
    "dev:backend:linux": "export PATH=$PATH:/usr/local/go/bin && cd backend && go run cmd/server/main.go",
    "dev:backend:darwin": "export PATH=$PATH:/usr/local/go/bin && cd backend && go run cmd/server/main.go",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o ../bin/go-reader-server cmd/server/main.go",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "stop": "echo '嘗試停止 Go-Reader 相關服務...' && lsof -t -i:8080 | xargs kill -9 || true && lsof -t -i:5173 | xargs kill -9 || true && pkill -f \"electron .\" || true && echo '停止指令已發送。請檢查服務是否已完全停止。'"
  },
  "build": {
    "appId": "com.goreader.app",
    "productName": "Go Reader",
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/migrations",
        "to": "migrations",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "wait-on": "^8.0.1"
  }
}
